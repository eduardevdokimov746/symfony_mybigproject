{% extends '@ship/layout/admin_includes.html.twig' %}

{% trans_default_domain 'admin_base' %}

{% block body %}
    <div class="wrapper">
        <nav class="main-header navbar navbar-expand navbar-dark">
            <ul class="navbar-nav" id="burger-menu">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" title="{{ 'burger_menu.title'|trans }}"
                       role="button"><i class="fas fa-bars"></i>
                    </a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{ url('locale.switch') }}"
                       title="{{ 'title'|trans(domain = 'locale') }}">
                        <i class="fa-solid fa-earth-americas"></i>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="#" title="{{ 'logout.title'|trans }}">
                        <i class="fa-solid fa-right-from-bracket"></i>
                    </a>
                </li>
            </ul>
        </nav>

        <aside class="main-sidebar sidebar-dark-primary layout-fixed">
            <a href="{{ url('admin.home.main') }}" class="brand-link">
                <img src="{{ absolute_url(asset('logo.png', 'img')) }}" alt="Admin" class="brand-image img-circle">
                <span class="brand-text font-weight-light">{{ app_name }}</span>
            </a>

            <div class="sidebar">
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="{{ absolute_url(asset(app.user.profile.avatar, 'avatar')) }}" class="img-circle">
                    </div>
                    <div class="info">
                        <a href="{{ url('admin.users.edit', {'id': app.user.id}) }}" class="d-block">{{ app.user.userIdentifier }}</a>
                    </div>
                </div>

                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu"
                        data-accordion="false">

                        <li class="nav-item">
                            <a href="{{ url('admin.users.index') }}"
                               class="nav-link {{ 'users' in app.current_route ? 'active' }}">
                                <i class="fa-solid fa-users"></i>
                                <p>{{ 'sidebar.users'|trans }}</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="#" class="nav-link {{ 'news' in app.current_route ? 'active' }}">
                                <i class="fa-solid fa-newspaper"></i>
                                <p>{{ 'sidebar.news'|trans }}</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="#" class="nav-link {{ 'comments' in app.current_route ? 'active' }}">
                                <i class="fa-solid fa-comments"></i>
                                <p>{{ 'sidebar.comments'|trans }}</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="{{ url('admin.categories.index') }}"
                               class="nav-link {{ 'categories' in app.current_route ? 'active' }}">
                                <i class="fa-solid fa-object-group"></i>
                                <p>{{ 'sidebar.categories'|trans }}</p>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <div class="content-wrapper" style="min-height: 215px;">
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0">{% block page_title %}{% endblock %}</h1>
                        </div>
                    </div>

                    {% block alert %}{% endblock %}
                </div>
            </div>

            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            {% block content %}{% endblock %}
                        </div>
                    </div>
                </div>
            </section>
        </div>

        <footer class="main-footer">
            <div class="float-right d-none d-sm-inline">
                <a href="{{ url('home.main') }}">{{ 'go_to_main'|trans }}</a>
            </div>
            <strong>Copyright Â© 2014-2021 <a href="https://adminlte.io">AdminLTE.io</a>.</strong> All rights reserved.
        </footer>
    </div>
{% endblock %}