{% trans_default_domain 'base' %}

<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{{ app_name }}</title>

    {% block style %}
        <link rel="stylesheet" href="{{ absolute_url(asset('fontawesome.min.css', 'css')) }}">
        <link rel="stylesheet" href="{{ absolute_url(asset('main.css', 'css')) }}">
    {% endblock %}
</head>

<body>
<header>
    <div id="header-content">
        <div id="logo-block">
            <div id="logo-content">
                <a href="{{ url('home.main') }}" title="{{ 'logo_title'|trans }}">
                    <img src="{{ absolute_url(asset('logo.png', 'img')) }}" id="logo">
                </a>
            </div>
        </div>

        <div id="search-nav-block">
            <div id="search-content">
                <form action="#" id="search-form">
                    <input type="text" name="request" id="search-input" placeholder="{{ 'search.placeholder'|trans }}"/>
                </form>
            </div>

            <div id="nav-content">
                <div>
                    <button onClick="goCarousel('previous')" class="nav-btn nav-btn-previous">
                        <i class="fa-solid fa-angle-left"></i>
                    </button>
                </div>
                <div id="navbar">
                    <a href="" class="navbar-item navbar-item-active">Все</a>
                    <a href="" class="navbar-item">Спорт</a>
                    <a href="" class="navbar-item">Животные</a>
                    <a href="" class="navbar-item">Политика</a>
                    <a href="" class="navbar-item">Информационные технологические процессы</a>
                    <a href="" class="navbar-item">Спорт</a>
                    <a href="" class="navbar-item">Животные</a>
                    <a href="" class="navbar-item">Мяч</a>
                    <a href="" class="navbar-item">Мяч</a>
                    <a href="" class="navbar-item">Информационные технологические процессы</a>
                </div>
                <div>
                    <button onClick="goCarousel('next')" class="nav-btn nav-btn-next">
                        <i class="fa-solid fa-angle-right"></i>
                    </button>
                </div>
            </div>
        </div>

        <div id="auth-locale-block">
            <div id="auth-locale-flex">
                <div id="auth-content">
                    <div id="reg-user-links">
                        {% if app.user is null %}
                            <a href="{{ url('auth.registration') }}"
                               class="reg-link">{{ 'auth.registration'|trans }}</a>
                            &frasl;
                            <a href="{{ url('auth.login') }}" class="reg-link">{{ 'auth.login'|trans }}</a>
                        {% else %}
                            <a href="{{ url('profile.index') }}" class="reg-link"
                               title="{{ 'profile.title'|trans }}">{{ app.user.userIdentifier }}</a>
                            <a href="{{ url('auth.logout') }}" class="reg-link">{{ 'logout'|trans }}</a>
                        {% endif %}
                    </div>
                </div>

                <div id="locale-switch-block">
                    {{ include('@locale/_swith_template.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</header>

<div id="container" {{ container_attr|default|raw }}>
    <div id="container-title">
        {% block page_title %}{% endblock %}
    </div>
    {% block content %}{% endblock %}
</div>

{% block script %}
    <script src="{{ absolute_url(asset('fontawesome.min.js', 'js')) }}"></script>
    <script src="{{ absolute_url(asset('navbar.js', 'js')) }}"></script>
{% endblock %}
</body>
</html>