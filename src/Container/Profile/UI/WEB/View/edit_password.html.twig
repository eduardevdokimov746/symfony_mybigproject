{% extends '@ship/layout/base.html.twig' %}

{% trans_default_domain 'profile' %}

{% block style %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ absolute_url(asset('profile_page.css', 'css')) }}">
{% endblock %}

{% block page_title %}
    <p>{{ 'main_block_title'|trans }}</p>
{% endblock %}

{% block content %}
    <div class="content-inner-group">
        <div class="content-inner-block content-inner-block-main">
            <div class="content-inner-header">
                <div class="content-inner-title">
                    <p>{{ 'navbar.edit_password'|trans }}</p>
                </div>
                <div>
                    <p class="t-success">{{ app.flashes('success') ? 'success.edit_password'|trans }}</p>
                </div>
            </div>

            <div class="content-inner-body">
                <form method="POST">
                    <input type="hidden" name="{{ csrf_parameter }}" value="{{ csrf_token(csrf_token_id) }}">
                    <div>
                        <div class="form-field">
                            <div class="form-label">
                                <label for="oldPlainPassword">{{ 'form.old_password'|trans }}</label>
                            </div>
                            <div>
                                <input id="oldPlainPassword" name="oldPlainPassword" class="form-input" type="password" autofocus>
                            </div>
                            {% if app|flashError('oldPlainPassword', true) %}
                                <p class="form-error">{{ app|flashError('oldPlainPassword') }}</p>
                            {% endif %}
                        </div>

                        <div class="form-field field-margin-top">
                            <div class="form-label">
                                <label for="newPlainPassword">{{ 'form.new_password'|trans }}</label>
                            </div>
                            <div>
                                <input id="newPlainPassword" name="newPlainPassword" class="form-input" type="password">
                            </div>
                            {% if app|flashError('newPlainPassword', true) %}
                                <p class="form-error">{{ app|flashError('newPlainPassword') }}</p>
                            {% endif %}
                        </div>

                        <div class="form-field field-margin-top">
                            <div class="form-label">
                                <label for="newPlainPasswordConfirmation">{{ 'form.new_password_confirmation'|trans }}</label>
                            </div>
                            <div>
                                <input id="newPlainPasswordConfirmation" name="newPlainPasswordConfirmation"
                                       class="form-input" type="password">
                            </div>
                            {% if app|flashError('newPlainPasswordConfirmation', true) %}
                                <p class="form-error">{{ app|flashError('newPlainPasswordConfirmation') }}</p>
                            {% endif %}
                        </div>

                        <div class="field-margin-top t-end">
                            <button class="btn">{{ 'btn.save'|trans }}</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div class="content-inner-block content-inner-block-additional">
            <div class="content-inner-header">
                <div class="content-inner-title">
                    <p>{{ 'navbar_title'|trans }}</p>
                </div>
            </div>
            <div class="content-inner-body">
                {{ include('@profile/_navbar.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}