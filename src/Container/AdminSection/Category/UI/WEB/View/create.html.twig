{% extends '@ship/layout/admin_base.html.twig' %}

{% trans_default_domain 'category' %}

{% block page_title %}{{ 'main_block_title.create'|trans }}{% endblock %}

{% block alert %}{% do app.flashes('success') ? alert_success('success_message.create'|trans) %}{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-body p-3">
            {{ form_start(form) }}

            {{ form_widget(form) }}

            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-primary">{{ 'form.create_btn'|trans }}</button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}